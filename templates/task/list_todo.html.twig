{% extends 'base.html.twig' %}
{% block title %}{{ 'app.twig.page.task.list.sub_title_task_todo'|trans }}{% endblock %}
{% block header_img %}
    <img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    <h2 class="mt-4 text-uppercase fw-bold">{{ 'app.twig.page.task.list.sub_title_task_todo'|trans }}</h2>
    {% include 'components/_taskSortBar.html.twig' %}
    {% if tasks != null %}
    <div class="row">
        {% for task in tasks %}
            {% if not task.isDone %}
                {% include 'components/_list_task.html.twig' %}
            {% endif %}
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center mt-5">
        {% include 'components/_pagination.html.twig' %}
    </div>
    {% endif %}
    {% if tasks|length == 0 %}
        <div class="alert alert-success mt-4" role="alert">
            {% if tasks|length == 0 %}
                {{ 'app.twig.page.task.list.no_todo_todo'|trans }}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
