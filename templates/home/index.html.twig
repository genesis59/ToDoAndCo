{% extends 'base.html.twig' %}
{% block title %}{{ 'app.twig.page.default.index.sub_title'|trans }}{% endblock %}
{% block header_img %}
    {% include 'components/_header.html.twig' with {'my_title': 'app.twig.page.default.index.header_title'|trans} %}
{% endblock %}
{% block body %}
    <h2 class="mt-4 text-uppercase fw-bold">{{ 'app.twig.page.default.index.sub_title'|trans }}</h2>
    <div class="row mt-5 justify-content-between" {{ stimulus_controller('home-redirect-button') }}>
        <div
                class="col-12 col-md-4 btn-section"
                data-url="{{ path('task_create') }}"
                data-action="click->home-redirect-button#redirect"
        >
            {{ 'app.twig.page.default.index.button.create'|trans }}
        </div>
        <div
                class="col-12 col-md-4 btn-section"
                data-url="{{ path('task_list_todo') }}"
                data-action="click->home-redirect-button#redirect"
        >
            {{ 'app.twig.page.default.index.button.todo'|trans }}
        </div>
        <div
                class="col-12 col-md-4 btn-section"
                data-url="{{ path('task_list_finished') }}"
                data-action="click->home-redirect-button#redirect"
        >
            {{ 'app.twig.page.default.index.button.finished'|trans }}
        </div>
    </div>
{% endblock %}
