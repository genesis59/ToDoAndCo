<nav aria-label="Page navigation example">
    <ul class="pagination">
        {% if previousPage != null %}
            <li class="page-item"><a class="page-link" href="{{ firstPage }}">{{ 'app.twig.component.pagination.first'|trans }}</a></li>
        {% if previousPage != firstPage %}
            <li class="page-item"><a class="page-link" href="{{ previousPage }}">{{ 'app.twig.component.pagination.previous'|trans }}</a></li>
        {% endif %}
{#            <li class="page-item"><a class="page-link" href="{{ previousPage }}">{{ currentPage - 1 }}</a></li>#}
        {% endif %}
            <li class="page-item active"><a class="page-link" href="{{ app.request.uri }}">{{ 'app.twig.component.pagination.page'|trans|capitalize }} {{ currentPage }}</a></li>
        {% if nextPage != null %}
{#            <li class="page-item"><a class="page-link" href="{{ nextPage }}">{{ currentPage + 1 }}</a></li>#}
        {% if nextPage != lastPage %}
            <li class="page-item"><a class="page-link" href="{{ nextPage }}">{{ 'app.twig.component.pagination.next'|trans }}</a></li>
        {% endif %}
            <li class="page-item"><a class="page-link" href="{{ lastPage }}">{{ 'app.twig.component.pagination.last'|trans }}</a></li>
        {% endif %}
    </ul>
</nav>
